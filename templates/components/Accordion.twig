<div class="accordion" id="accordionExample">
	{% for index, value in accordions %}
		{% if index == 0 %}
			<div class="accordion-item">
				<h4 class="accordion-header" id="{{value.headerId}}">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{value.accordionItemId}}" aria-expanded="true" aria-controls="{{value.accordionItemId}}">
						{{value.accordionHeading}}
					</button>
				</h4>
				<div id="{{value.accordionItemId}}" class="accordion-collapse collapse show" aria-labelledby="{{value.headerId}}" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						{{value.accordionText}}
					</div>
				</div>
			</div>
		{% else %}
			<div class="accordion-item">
				<h4 class="accordion-header" id="{{value.headerId}}">
					<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
						{{value.accordionHeading}}
					</button>
				</h4>
				<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="{{value.headerId}}" data-bs-parent="#accordionExample">
					<div class="accordion-body">
						{{value.accordionText}}
					</div>
				</div>
			</div>
		{% endif %}
	{% endfor %}
</div>
