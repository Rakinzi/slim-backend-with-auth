<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    {% for crumb in crumbs %}
    <li class="breadcrumb-item {{ loop.last ? 'active' }}" {% if loop.last %}aria-current="page"{% endif %}>
      {% if not loop.last %}
      <a href="{{ crumb.url }}">{{ crumb.label }}</a>
      {% else %}
      {{ crumb.label }}
      {% endif %}
    </li>
    {% endfor %}
  </ol>
</nav>